{{#if optionValuePath}}
  <option value={{get option optionValuePath}}
          selected={{owc-contains selected option}}>
    {{#if optionLabelPath}}
      {{get option optionLabelPath}}
    {{else}}
      {{get option optionValuePath}}
    {{/if}}
  </option>
{{else}}
  <option value={{option}}
          selected={{owc-contains selected option}}>
    {{option}}
  </option>
{{/if}}
