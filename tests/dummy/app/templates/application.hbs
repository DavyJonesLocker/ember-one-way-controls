<h1>Welcome!</h1>

<div id="text-current-value">
  {{textCurrentValue}}
</div>

{{one-way-input
  id="one-way-text"
  value=textCurrentValue
  update=(action (mut textCurrentValue))
}}

<div id="committed">
  {{committed}}
</div>

{{one-way-input
  id="one-way-text-keyevents"
  value=textCurrentValue
  update=(action "noop")
  onenter=(action "commit")
  onescape=(action "commit")
}}

<div id="checkbox-current-value">
  {{checkboxCurrentValue}}
</div>

{{one-way-input
  id="one-way-checkbox"
  type="checkbox"
  checked=checkboxCurrentValue
  update=(action (mut checkboxCurrentValue))
}}

{{one-way-input
  id="dynamic-attributes"
  value="hello"
  update=(action "noop")
  placeholder="this is a placeholder"
  data-thing="this is an arbitrary attribute"
}}

{{outlet}}
